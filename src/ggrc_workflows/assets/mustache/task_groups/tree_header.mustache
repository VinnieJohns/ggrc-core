<div class="header tree-header-content">
  {{{> "/static/mustache/base_objects/tree_view_filter.mustache"}}}

  <header class="header tree-header">
    <div class="row-fluid">
      <div class="span6">
        <div class="title-heading oneline">
          <span class="widget-col-title" data-field="title">
            Task Group
            <i class="fa fa-caret-down"></i>
          </span>
        </div>
      </div>
      <div class="span2">
        <div class="oneline">
          <span class="widget-col-title" data-field="contact.name|email">
            Assignee
            <i class="fa fa-caret-down"></i>
          </span>
        </div>
      </div>
      <div class="span4">
        <ul class="tree-action-list">
          {{#if add_item_view}}
          {{^if_equals parent_instance.kind "Backlog"}}
          <li>
            {{{renderLive add_item_view}}}
          </li>
          {{/if_equals}}
          {{/if}}
        </ul>
      </div>
    </div>
  </header>
</div>
<div class="clearfix"></div>
