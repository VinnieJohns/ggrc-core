{{#switch attr_name}}
  {{#case 'email'}}
    <div class="email tree-title-area">
      <span class="email">{{instance.email}}</span>
      {{#if_equals system_wide_role 'No Access'}}
        <span class="user-disabled">
                      (Inactive user)
                    </span>
      {{/if_equals}}
    </div>
  {{/case}}
  {{#default}}
    {{get_default_attr_value attr_name instance}}
  {{/default}}
{{/switch}}
