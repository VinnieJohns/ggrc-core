<div class="columns-wrapper">
  {{#each columns}}
    <div class="title" can-click="applySort">
      {{attr_title}}
      {{#isSorted}}
        <i class="fa
          {{#isSortedAsc}}fa-caret-up{{/isSortedAsc}}
          {{^isSortedAsc}}fa-caret-down{{/isSortedAsc}}">
        </i>
      {{/isSorted}}
    </div>
  {{/each}}
</div>
