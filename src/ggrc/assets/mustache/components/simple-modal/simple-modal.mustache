{{#state.open}}
<div class="simple-modal__overlay">
    <div class="simple-modal {{extraCssClass}}">
        <div class="simple-modal__header flex-box flex-row">
            <div class="simple-modal__header-text flex-size-1">{{modalTitle}}</div>
            <button class="btn btn-small btn-icon" can-click="hide">
                <i class="fa fa-times black"></i>
            </button>
        </div>
        <content></content>
    </div>
</div>
{{/state.open}}
